{
	"extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts",
			"coverage/lcov-report/*.js"
		]
	},
	"rules": {
		"no-console": false,
		"object-literal-sort-keys": false,
		"comment-format": [false, "check-space"],
		"ordered-imports": false,
		"jsx-no-lambda": false,
		"arrow-parens": false,
		"prefer-const": false
	},
	"jsRules": {
		"no-console": false
	}
}